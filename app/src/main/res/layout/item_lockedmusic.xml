<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/item_lockedmusic_cover_img_cardView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/item_lockedmusic_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_unavailable"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/item_lockedmusic_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_lockedmusic_cover_img_cardView"
        android:orientation="vertical"
        android:paddingStart="15dp"
        >

        <TextView
            android:id="@+id/item_lockedmusic_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/item_lockedmusic_artist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="artist"
            />

    </LinearLayout>
    
    <ImageView
        android:id="@+id/item_lockedmusic_playBtn_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_miniplay_mvplay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_lockedmusic_moreBtn_iv"
        />

    <ImageView
        android:id="@+id/item_lockedmusic_moreBtn_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>