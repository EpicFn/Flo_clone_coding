<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <LinearLayout
            android:id="@+id/home_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_pannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/home_pannel_background_iv"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:scaleType="centerCrop"

                    android:src="@drawable/img_first_album_default"

                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="1dp" />

                <ImageView
                    android:id="@+id/home_btn_setting_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/btn_main_setting"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:id="@+id/home_btn_ticket_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/btn_main_ticket"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/home_btn_setting_iv"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:id="@+id/home_btn_mike_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/btn_main_mike"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/home_btn_ticket_iv"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/home_pannel_pharse_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginStart="10dp"

                    android:text="포근하게 덮어주는 꿈의 \n목소리"
                    android:textColor="@color/white"
                    android:textSize="30sp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/home_btn_play_iv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_panel_play_large"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_pannel_pharse_tv"

                    android:layout_marginEnd="20dp" />

                <TextView
                    android:id="@+id/home_record_tv"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:layout_constraintBottom_toTopOf="@+id/home_album_img_iv_1"
                    app:layout_constraintStart_toStartOf="parent"

                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"

                    android:text="총 15곡 2019.11.11"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/home_album_img_iv_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="15dp"

                    android:src="@drawable/img_album_exp"

                    app:layout_constraintBottom_toTopOf="@+id/home_album_img_iv_2"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <ImageView
                    android:id="@+id/home_album_img_iv_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="15dp"

                    android:src="@drawable/img_album_exp"

                    app:layout_constraintBottom_toBottomOf="@+id/home_pannel_background_iv"
                    app:layout_constraintStart_toStartOf="parent"

                    />

                <TextView
                    android:id="@+id/home_album_title_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="15dp"

                    app:layout_constraintStart_toEndOf="@+id/home_album_img_iv_1"
                    app:layout_constraintBottom_toTopOf="@+id/home_album_title_tv_2"

                    android:text="잠이 안온다\n젠(zen)"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/home_album_title_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="15dp"

                    app:layout_constraintStart_toEndOf="@+id/home_album_img_iv_2"
                    app:layout_constraintBottom_toBottomOf="@+id/home_pannel_background_iv"

                    android:text="잠이 안온다\n젠(zen)"
                    android:textColor="@color/white"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/home_todayMusic_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="오늘 발매 음악"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"

                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:src="@drawable/btn_main_arrow_more"
                    android:layout_gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="종합"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="국내"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="해외"
                    android:textSize="18sp"
                    android:gravity="center"

                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="195dp"

                app:layout_constraintTop_toBottomOf="@+id/home_todayMusic_header"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/home_todayMusic_albums"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    app:layout_constraintTop_toBottomOf="@+id/home_todayMusic_header"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/home_todayMusic_album_1"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:layout_marginHorizontal="15dp">

                        <ImageView
                            android:id="@+id/home_todayMusic_album_1_photo"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:src="@drawable/img_home_albun_photo"
                            />

                        <TextView
                            android:id="@+id/home_todayMusic_album_1_title"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Surrender"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/home_todayMusic_album_1_artist"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Alexis king"
                            android:textSize="18dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_todayMusic_album_2"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:layout_marginHorizontal="15dp">

                        <ImageView
                            android:id="@+id/home_todayMusic_album_2_photo"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:src="@drawable/img_home_albun_photo"
                            />

                        <TextView
                            android:id="@+id/home_todayMusic_album_2_title"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Surrender"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/home_todayMusic_album_2_artist"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Alexis king"
                            android:textSize="18dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_todayMusic_album_3"
                        android:layout_width="130dp"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:layout_marginHorizontal="15dp">

                        <ImageView
                            android:id="@+id/home_todayMusic_album_3_photo"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:src="@drawable/img_home_albun_photo"
                            />

                        <TextView
                            android:id="@+id/home_todayMusic_album_3_title"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Surrender"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/home_todayMusic_album_3_artist"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Alexis king"
                            android:textSize="18dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

